{
  "manifest_version": 2,
  "name": "Schedule to ICS Exporter",
  "version": "1.0",
  "description": "Extracts schedule events and saves as ICS file.",
  "permissions": [
    "https://facultyssb-prod.ec.tru.ca/FacultySelfService/ssb/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Export Schedule to ICS",
    "default_icon": "9949196.png"
  },
  "content_scripts": [
    {
      "matches": ["https://facultyssb-prod.ec.tru.ca/FacultySelfService/ssb/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "9949196.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "schedule-to-ics-exporter@mateen.dev",
      "strict_min_version": "91.0"
    }
  }
}